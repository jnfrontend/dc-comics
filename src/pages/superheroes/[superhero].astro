---
import type { GetStaticPaths } from "astro";
import SubLayout from "../../layouts/SubLayout.astro";

const { superhero } = Astro.params;

// Create a page routes and layout for the superheroes
export function getStaticPaths() {
    const superhero = [
        'the-flash',
        'wonder-woman',
        'superman',
        'zatanna',
    ];

    return superhero.map((superhero) => ({
        params: { superhero }
    }));
}

